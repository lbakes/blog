<body>
<div class="row">
    <div class="col-sm-9">
      <h1>Clean Blog</h1>
    </div>
    <div class="col-sm-3">
      <%= link_to 'Home', welcome_index_path, class: 'Ghome'%>
      <%= link_to 'Login', new_user_path, class: 'Glogin'%>
    </div>
  </div>


<% @articles.each do |article| %>
      <h2><%= article.title %></h2>
      <h3><%= article.text %></h3>
    <tr>

      <td><%= link_to 'Show', article_path(article), class: 'Gshow'%></td>
      <td><%= link_to 'Edit', edit_article_path(article), class: 'Gedit'%></td>
      <td><%= link_to 'Delete', article_path(article), class: 'Gdelete',
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<div class="new">
  <%= link_to 'New article', new_article_path, class: "new_article" %>
</div>
</body>
